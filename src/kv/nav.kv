#:kivy 2.2.1

#:import window kivy.core.window.Window
#:import Sizes src.uix.style_guides.Sizes
#:set nav_width 70
#:set nav_width_border 3

<NavButton>:
  text: str(self.y)
  x: 5

<Nav>:
  size: Sizes.Nav.width, window.height
  background_color: 0, 255, 0

  canvas.before:
    Color:
      rgb: 226, 226, 226

    Rectangle:
      size: Sizes.Nav.width, window.height

    Color:
      rgb: 255, 0, 0

    Rectangle:
      size: Sizes.Nav.border_width, window.height
      pos: Sizes.Nav.width, self.pos[1]
