{
  "files.autoSave": "off",
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.py$",
        "cmd": "${workspaceFolder}/.venv/Scripts/autoflake.exe ${file}"
      },
      {
        "match": "\\.py$",
        "cmd": "${workspaceFolder}/.venv/Scripts/docformatter.exe ${file}"
      },
      {
        "match": "\\.py$",
        "cmd": "${workspaceFolder}/.venv/Scripts/unexport.exe -r ${file}"
      }
    ]
  },
  "ruff.importStrategy": "fromEnvironment",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.unusedImports": "explicit"
    }
  },
  "[toml][shellscript][xml][sql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.exclude": {
    "**/__pycache__/": true
  },
  "python.testing.pytestArgs": ["."],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "ruff.nativeServer": "off",
  "python.languageServer": "Pylance",
  "python.analysis.languageServerMode": "light",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "explorer.sortOrder": "type",
  "explorer.sortOrderLexicographicOptions": "lower",
  "explorer.openEditors.sortOrder": "fullPath",
  "editor.rulers": [88],
  "diffEditor.hideUnchangedRegions.enabled": true
}
