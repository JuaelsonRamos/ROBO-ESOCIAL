{
  "files.autoSave": "off",
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.py$",
        "cmd": "${workspaceFolder}/.venv/Scripts/autoflake.exe ${file}"
      },
      {
        "match": "\\.py$",
        "cmd": "${workspaceFolder}/.venv/Scripts/docformatter.exe ${file}"
      },
      {
        "match": "\\.py$",
        "cmd": "${workspaceFolder}/.venv/Scripts/unexport.exe -r ${file}"
      }
    ]
  },
  "ruff.importStrategy": "fromEnvironment",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.unusedImports": "explicit"
    }
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[json][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.exclude": {
    "**/__pycache__/": true
  },
  "python.testing.pytestArgs": ["."],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.terminal.activateEnvironment": true,
  "ruff.nativeServer": "off",
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.languageServerMode": "light",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "mypy-type-checker.preferDaemon": true,
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "mypy-type-checker.reportingScope": "workspace",
  "explorer.sortOrder": "type",
  "explorer.sortOrderLexicographicOptions": "lower",
  "explorer.openEditors.sortOrder": "fullPath",
  "editor.rulers": [88],
  "diffEditor.hideUnchangedRegions.enabled": true
}
