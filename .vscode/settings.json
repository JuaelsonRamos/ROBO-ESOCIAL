{
  "files.autoSave": "off",
  "emeraldwalk.runonsave": {
    "showElapsed": true,
    "commands": [
      {
        "match": "\\.ya?ml$",
        "cmd": ".venv\\Scripts\\yamlfix.exe ${file}"
      },
      {
        "match": "\\.toml$",
        "cmd": ".venv\\Scripts\\taplo.exe format ${file}"
      },
      {
        "match": "\\.jsonc?$",
        "notMatch": ".*\\.vscode.*",
        "cmd": ".venv\\Scripts\\python.exe scripts/format_json.py ${file}"
      },
      {
        "match": "\\.py$",
        "cmd": ".venv\\Scripts\\docformatter.exe ${file}"
      },
      {
        "match": "\\.py$",
        "cmd": ".venv\\Scripts\\ruff.exe check --select=F401,I --fix ${file}"
      }
    ]
  },
  "ruff.importStrategy": "fromEnvironment",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": {
      /* Preferir um hook da extensão RunOnSave porque ela respeita a configuração.
       * Especificar code actions para serem rodadas é uma ação do vscode que
       * sobrescreve a configuração do ruff independentemente.
       */
      // "source.unusedImports": "explicit"
      // "source.organizeImports": "explicit"
    }
  },
  "files.exclude": {
    "**/__pycache__/": true
  },
  "python.testing.pytestArgs": ["."],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.terminal.activateEnvironment": true,
  "ruff.nativeServer": "off",
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.languageServerMode": "light",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "mypy-type-checker.preferDaemon": true,
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "mypy-type-checker.reportingScope": "workspace",
  "explorer.sortOrder": "type",
  "explorer.sortOrderLexicographicOptions": "lower",
  "explorer.openEditors.sortOrder": "fullPath",
  "editor.rulers": [88],
  "diffEditor.hideUnchangedRegions.enabled": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.callArgumentNames": "partial",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "autoDocstring.docstringFormat": "sphinx-notypes"
}
