{
  "files.autoSave": "off",
  "emeraldwalk.runonsave": {
    "showElapsed": true,
    "commands": [
      {
        "match": "\\.ya?ml$",
        "cmd": ".venv\\Scripts\\yamlfix.exe ${file}"
      },
      {
        "match": "\\.toml$",
        "cmd": ".venv\\Scripts\\taplo.exe format ${file}"
      },
      {
        "match": "\\.jsonc?$",
        "notMatch": ".*\\.vscode.*",
        "cmd": ".venv\\Scripts\\python.exe scripts/format_json.py ${file}"
      },
      {
        "match": "\\.py$",
        "cmd": ".venv\\Scripts\\docformatter.exe ${file}"
      }
    ]
  },
  "editor.formatOnSave": true,
  "ruff.importStrategy": "fromEnvironment",
  "ruff.nativeServer": "auto",
  "ruff.ignoreStandardLibrary": false,
  "ruff.enable": true,
  "ruff.lint.enable": true,
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "ruff.lint.run": "onSave",
  "ruff.lint.select": ["I", "F401"],
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit",
    }
  },
  "files.exclude": {
    "**/__pycache__/": true
  },
  "python.testing.pytestArgs": ["."],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.terminal.activateEnvironment": true,
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.languageServerMode": "light",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.importFormat": "relative",
  "python.analysis.fixAll": ["source.convertImportFormat"],
  "explorer.sortOrder": "type",
  "explorer.sortOrderLexicographicOptions": "lower",
  "explorer.openEditors.sortOrder": "fullPath",
  "editor.rulers": [88],
  "diffEditor.hideUnchangedRegions.enabled": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.callArgumentNames": "partial",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "autoDocstring.docstringFormat": "sphinx-notypes"
}
